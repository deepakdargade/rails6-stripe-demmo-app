<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Stripe Id</th>
      <th>Price Id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Sales count</th>
      <th>Shopping Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.stripe_product_id %></td>
        <td><%= product.stripe_price_id %></td>
        <td><%= product.name %></td>
        <td><%= number_to_currency product.price, unit: 'â‚¹ ' %></td>
        <td><%= product.sales_count %></td>
        <td>
          <% if @cart.include?(product) %>
            <%= button_to 'Remove from cart', remove_from_cart_path(product), method: :delete %>
          <% else %>
            <%= button_to 'Add to cart', add_to_cart_path(product), method: :post %>
          <% end %>
        </td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

